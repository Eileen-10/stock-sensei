---
import supplier_data from "../data/supplier_data.json";
---
<div> 
    <p class="font-bold text-3xl mb-8">Suppliers</p>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Supplier
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Product
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Category
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Price
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only">View</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                {supplier_data.map((supplier,index)=>(
                    <tr class="bg-white border-b  hover:bg-gray-50 ">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                            {supplier.name}
                        </th>
                        <td class="px-6 py-4">
                            {supplier.product}
                        </td>
                        <td class="px-6 py-4">
                            {supplier.category}
                        </td>
                        <td class="px-6 py-4">
                            {supplier.price}
                        </td>
                        <td class="px-6 py-4 text-right">
                            <a href="#" class="font-medium text-blue-600" data-modal-target={index} data-modal-toggle={index}>View</a>
                        </td>
                        <div id={index.toString()} tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
                            <div class="relative w-full max-w-2xl max-h-full">
                                <div class="relative bg-white rounded-lg shadow">
                                    <div class="flex items-start justify-between p-4 border-b rounded-t">
                                        <h3 class="text-xl font-semibold text-gray-900 ">
                                            {supplier.name}
                                        </h3>
                                        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center" data-modal-hide={index}>
                                            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                                            <span class="sr-only">Close modal</span>
                                        </button>
                                    </div>
                                    <div class="max-w-[80%] flex justify-center items-center">
                                        <div id="embedded-map-display" class="w-full">
                                            <iframe class="h-full w-full" src={supplier.map}></iframe>
                                        </div>
                                    </div>
                                    <div class="p-6 space-y-6">
                                        <p class="text-base leading-relaxed text-gray-500">
                                            {supplier.product}
                                        </p>
                                        <div class="flex items-center mb-5">
                                            <p class="bg-blue-100 text-blue-800 text-sm font-semibold inline-flex items-center p-1.5 rounded">8.7</p>
                                            <p class="ml-2 font-medium text-gray-900">Excellent</p>
                                            <span class="w-1 h-1 mx-2 bg-gray-900 rounded-full"></span>
                                            <p class="text-sm font-medium text-gray-500">{supplier.reviews} reviews</p>
                                        </div>
                                        <div class="gap-8 sm:grid sm:grid-cols-2">
                                            <div>
                                                <dl>
                                                    <dt class="text-sm font-medium text-gray-500">Delivery Time</dt>
                                                    <dd class="flex items-center mb-3">
                                                        <div class="w-full bg-gray-200 rounded h-2.5 mr-2">
                                                            <div class="bg-blue-600 h-2.5 rounded" style={{width: supplier.delivery+"%"}}></div>
                                                        </div>
                                                        <span class="text-sm font-medium text-gray-500">{supplier.delivery/10}</span>
                                                    </dd>
                                                </dl>
                                                <dl>
                                                    <dt class="text-sm font-medium text-gray-500">Quality</dt>
                                                    <dd class="flex items-center mb-3">
                                                        <div class="w-full bg-gray-200 rounded h-2.5 mr-2">
                                                            <div class="bg-blue-600 h-2.5 rounded" style={{width: supplier.quality+"%"}}></div>
                                                        </div>
                                                        <span class="text-sm font-medium text-gray-500">{supplier.quality/10}</span>
                                                    </dd>
                                                </dl>
                                                <dl>
                                                    <dt class="text-sm font-medium text-gray-500">Service</dt>
                                                    <dd class="flex items-center">
                                                        <div class="w-full bg-gray-200 rounded h-2.5 mr-2">
                                                            <div class="bg-blue-600 h-2.5 rounded" style={{width: supplier.service+"%"}}></div>
                                                        </div>
                                                        <span class="text-sm font-medium text-gray-500">{supplier.service/10}</span>
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </tr>
                ))}
            </tbody>
        </table>
    </div>
</div>